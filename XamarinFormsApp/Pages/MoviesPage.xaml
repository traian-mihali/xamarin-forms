<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Movies"
             x:Class="XamarinFormsApp.Pages.MoviesPage">
    <StackLayout>
        <SearchBar Placeholder="Search movie.." TextChanged="OnTextChanged" />
        <ActivityIndicator IsRunning="{Binding IsSearching}"/>
        <Frame x:Name="notFound" HasShadow="false" IsVisible="false" >
            <Label Text="No movies found matching your search." TextColor="Gray" />
        </Frame>
        <ListView x:Name="moviesListView" ItemSelected="OnMovieSelected" IsVisible="false">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell ImageSource="{Binding Poster}" Text="{Binding Title}" Detail="{Binding ReleaseDate}">
                    </ImageCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>