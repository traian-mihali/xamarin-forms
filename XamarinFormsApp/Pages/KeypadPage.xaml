<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFormsApp.Pages.KeypadPage"
             BackgroundColor="#354242">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="buttonBackgroundColor">AntiqueWhite</Color>
            <Color x:Key="buttonDialBackgroundColor">Green</Color>
            <Color x:Key="buttonTextColor">#28282c</Color>
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid Padding="40" RowSpacing="10" ColumnSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <StackLayout Grid.Row="0" Grid.ColumnSpan="3" VerticalOptions="Center" HorizontalOptions="Center">
            <Label Text="0123456789" TextColor="White" FontSize="50" FontAttributes="Bold" />
            <ActivityIndicator x:Name="loading"></ActivityIndicator>
        </StackLayout>
        
        <Button Grid.Row="1" Grid.Column="0" Text="1" TextColor="{StaticResource buttonTextColor}" BackgroundColor="{DynamicResource buttonBackgroundColor}" FontSize="30" BorderRadius="30" />
        <Button Grid.Row="1" Grid.Column="1" Text="2" TextColor="{StaticResource buttonTextColor}" BackgroundColor="{DynamicResource buttonBackgroundColor}" FontSize="30" BorderRadius="30" />
        <Button Grid.Row="1" Grid.Column="2" Text="3" TextColor="{StaticResource buttonTextColor}" BackgroundColor="{DynamicResource buttonBackgroundColor}" FontSize="30" BorderRadius="30" />
        <Button Grid.Row="2" Grid.Column="0" Text="4" TextColor="{StaticResource buttonTextColor}" BackgroundColor="{DynamicResource buttonBackgroundColor}" FontSize="30" BorderRadius="30" />
        <Button Grid.Row="2" Grid.Column="1" Text="5" TextColor="{StaticResource buttonTextColor}" BackgroundColor="{DynamicResource buttonBackgroundColor}" FontSize="30" BorderRadius="30" />
        <Button Grid.Row="2" Grid.Column="2" Text="6" TextColor="{StaticResource buttonTextColor}" BackgroundColor="{DynamicResource buttonBackgroundColor}" FontSize="30" BorderRadius="30" />
        <Button Grid.Row="3" Grid.Column="0" Text="7" TextColor="{StaticResource buttonTextColor}" BackgroundColor="{DynamicResource buttonBackgroundColor}" FontSize="30" BorderRadius="30" />
        <Button Grid.Row="3" Grid.Column="1" Text="8" TextColor="{StaticResource buttonTextColor}" BackgroundColor="{DynamicResource buttonBackgroundColor}" FontSize="30" BorderRadius="30" />
        <Button Grid.Row="3" Grid.Column="2" Text="9" TextColor="{StaticResource buttonTextColor}" BackgroundColor="{DynamicResource buttonBackgroundColor}" FontSize="30" BorderRadius="30" />
        <Button Grid.Row="4" Grid.Column="1" Text="0" TextColor="{StaticResource buttonTextColor}" BackgroundColor="{DynamicResource buttonBackgroundColor}" FontSize="30" BorderRadius="30" />
        <Button Grid.Row="5" Grid.ColumnSpan="3" Text="Dial" TextColor="{StaticResource buttonTextColor}" BackgroundColor="{DynamicResource buttonDialBackgroundColor}" FontSize="30" BorderRadius="30"  Clicked="OnDial"/>
    </Grid>
</ContentPage>