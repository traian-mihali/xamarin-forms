<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFormsApp.Pages.TableViewPage">
    <TableView Intent="Form">
        <TableRoot>
            <TableSection Title="Basics">
                <TextCell Text="Name" Detail="Traian Mihali" />
                <EntryCell Label="Title" Placeholder="(eg Shopping)"/>
                <SwitchCell Text="Notifications" On="True" />
                <ViewCell>
                    <StackLayout Orientation="Horizontal" Padding="14, 0">
                        <Label Text="Starts" VerticalOptions="Center"/>
                        <DatePicker Date="1 Jan 2020" Format="d MMM yyyy" HorizontalOptions="EndAndExpand"/>
                    </StackLayout>
                </ViewCell>
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>